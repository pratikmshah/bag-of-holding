<body class="bckgrd-results fnt-clr result-font" id="test">
  <div class="result-container">
    <div id="results" class="center">
      <% @results.each do |category, items| %>
        <% if items.is_a? Array %>
          <h3 class="fnt-head-clr"><%= category.capitalize %></h3>
          <% items.each do |item| %>
            <%= "#{item}" %>
          <% end %>
          <br>
         <% elsif items.is_a? Hash %>
          <%= category %>
          <% items.each do |itemkey, itemvalue| %>
            <% if itemkey.include?("not find game") || itemvalue == 0%>
              <% next %>
            <% else %>
              <% if itemvalue.include?("http://") %>
                <a href="<%= itemvalue %>">Link to review</a>
                <br>
              <% else %>
                <%= "#{itemkey}: #{itemvalue}" %>
               <br>
              <% end %>
            <% end %>
          <% end %>
         <% else %>
          <%= "#{category}: #{items}" %>
          <br>
         <% end %>
       <% end %>
    </div>
   </div>
   <div class="result-container">
    <a href="/index" class="return">%</a>
   </div>
   <audio autoplay>
  <source src="sounds/itemget.mp3" type="audio/mpeg">
</audio>
</body>